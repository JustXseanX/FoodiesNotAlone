
.container{
  padding: 0;
  height: 100vh;
}
.block{
  bottom: 0;
  border: 1rpx solid black;
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
}
.inputBox{
  background-color: #af0;
  width: 85%;
}
.inputBoxButton{
  background-color: #0af;
  width: 15%;
}

page {
  background-color: #f1f1f1;
}
.head{
  background-color: #0aa02b;
  height: 100rpx;
}
.inputRoom {
  width: 100vw;
  height: 16vw;
  border-top: 1px solid #cdcdcd;
  background-color: #f1f1f1;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  z-index: 2;
}

input {
  width: 76vw;
  height: 9.33vw;
  background-color: #fff;
  border-radius: 40rpx;
  margin-left: 2vw;
  padding: 0 3vw;
  font-size: 28rpx;
  color: #444;
}

.leftMsg {
  font-size: 35rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #fff;
  margin-left: -1.6vw;
  border-radius: 10rpx;
  z-index: 1;
  word-wrap: break-word;
  word-break: break-all;
  overflow: hidden;
}

.rightMsg {
  font-size: 35rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #96EB6A;
  margin-right: -1.6vw;
  border-radius: 10rpx;
  z-index: 1;
  word-wrap: break-word;
  word-break: break-all;
  overflow: hidden;
}

.but{
  font-size: 35rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
}
