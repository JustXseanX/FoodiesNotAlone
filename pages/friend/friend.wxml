<view class="header">
  <view class="userinfo">
      <image src="{{image}}" class="userinfo-avatar" ></image>
  </view >
  <view class="userinfo-nickname">
    <view class="inform">
      <view style="font-size:25px" >
        {{name}}
      </view >
      <view style=" margin-top:10rpx;font-size:20px;color:black">
        {{sex}}
      </view>
    </view>
  </view>
</view>
<view style="display:flex;flex-direction:row" >
  <view class="icon_out">
    <image class="icon_in" style="width:20px;height:20px" src="https://www.foodiesnotalone.cn/resources/UI/icon/pen.png"></image>
  </view>
  <view class="item">
    <text style="display: flex;justify-content: flex-start;margin-top:10px">个性签名：{{motto}}</text>
    <text style="display: flex;justify-content: flex-end;flex-grow: 1;color: #ccc;margin-right: 20rpx;margin-top:10px">></text>
  </view>
</view>
<view class="box">
  <button class="btn" bindtap="changeFriendState" style="{{buttonColor}}">{{friendStateText}}</button>
</view>
