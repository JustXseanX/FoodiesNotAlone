/* pages/group/group.wxss */

.userinfo {
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
  margin-left: 50rpx;
  margin-bottom: 50rpx;
}
.header{
  display: flex;
  flex-direction: row;
  border-top-width: 0.5px;
  border-top-style: solid;
  border-top-color: #aaa;
  border-bottom-width: 0.5px;
  border-bottom-style: solid;
  border-bottom-color: #aaa;
}
.userinfo-avatar {
  width: 230rpx;
  height: 230rpx;
  overflow:hidden;
  border-radius: 50%;
}
.inform{
  display: flex;
  flex-direction: column;
}

.userinfo-nickname {
  margin-left:100rpx;
  margin-top: 70rpx;
  color: #aaa;
}
.icon_out{
  width: 15%;
  height: 100rpx;
}
.icon_in{
  margin: 11px;
}
.item{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  border-bottom-style: solid;
  border-bottom-color: rgb(207, 205, 205);
  border-bottom-width: 1px;
}
.btn{
  display: flex;
  justify-content: center;
  width: 100%;
  background: #00a742;
}
.box{
  position:fixed; 
  bottom:0;
  width: 100%;
  margin-bottom:10px;
}

.memberBlock{
  display: flex;
  padding: 4px;
}

.userBlock{
  width: 125rpx;
  height: 125rpx;
  margin-right: 8px;
  margin-bottom: 4px;
  background-color: #cccccc;

  display: flex;
  flex-direction: column;
  align-items: center;

  border-radius: 8px;
}

.userBlockImg{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  overflow: hidden;
}

.userBlockImg image{
  width: 100%;
  height: 100%;
}

.userBlockName{
  width: 125rpx;
  height: 25rpx;
  font-size: 9px;
  display: flex;
  justify-content: center;
  text-overflow: ellipsis;
}