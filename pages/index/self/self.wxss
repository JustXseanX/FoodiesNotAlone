/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
  margin-left: 50rpx;
}
.header{
  display: flex;
  flex-direction: row;
  border-top-width: 0.5px;
  border-top-style: solid;
  border-top-color: #aaa;
}
.userinfo-avatar {
  width: 230rpx;
  height: 230rpx;
  overflow:hidden;
  border-radius: 50%;
}
.inform{
  display: flex;
  flex-direction: column;
}

.userinfo-nickname {
  margin-left:100rpx;
  margin-top: 70rpx;
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.my_border{
  border-top-style:solid;
  border-top-width: 0.1px;
  border-top-color: rgb(0, 0, 0);
  margin-top: 10px;
  border-bottom-style:solid ;
  border-bottom-width: 0.9px;
  border-bottom-color: rgb(0, 0, 0);
}
.title_pre
{
  display: flex;
  align-items: center;
  justify-content: center;  
  font-size: 15px;
}
.prefer{
  margin-top: 1px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background-color: rgb(245, 238, 238);
}
.prefer_index{
  background-color: rgb(255, 255, 255);
  border-width: 3px;
  margin: 15rpx;
  border-radius: 3px;
  border-color: #000;
}

.icon_out{
  width: 15%;
  height: 100rpx;
}
.icon_in{
  margin: 11px;
}
.item{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  border-bottom-style: solid;
  border-bottom-color: rgb(207, 205, 205);
  border-bottom-width: 1px;
}