
page{
  background: whitesmoke;
}

.page{
  width: 100%;
  /* overflow-x: hidden */
}


.eventBlock{
  position: relative;
  margin: 10px;
}
.body-view{
  background: url('https://www.foodiesnotalone.cn/resources/UI/paper_texture.jpg') no-repeat left top;
  display: flex;
  border-bottom: 1px solid #7e7e7e;
  border-right: 2px solid #7e7e7e;
  border-radius: 5px;
  overflow: hidden;
}
.left-view{
  width: 100rpx;
  z-index: 2;
  /* background: rebeccapurple; */
}
.right-view{
  z-index: 2;
  width: 100%;
}
.colorBlock{
    position: absolute;
    width: 100%;
    height: 100%;
    opacity: 0.4;
    border-radius: 5px;
    z-index: 1;
  }

/* 头像 */
.user-icon{
  /* display: flex; */
  width:30rpx;
  height: 40rpx;
  margin-left: 50rpx;
  margin-top: 30rpx;
  margin-right: 10rpx;
}

/* 昵称 */
.user-name{
  display: flex;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 22px;
  color: rgb(88, 103, 138);
  margin-top: 30rpx;

}

/* 内容 */
.user-content{
  display: flex;
  font-size: 15px;
  line-height: 50rpx;
  margin: 10px;
}


.iconBar{
  width: 100%;
}

.titleBar{
  height: 44px;
  width: 100%;
}

.title{
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;

  position: absolute;
  height: 44px;
  width: 100%;
}

.funcIcon{
  display: flex;
  height: 44px;
  align-items: center;

  position: absolute;
  left: 0;
}

.head{
  background-color: #ea6156;
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 3;
}

.isempty{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60px;
  width: 100%;
  font-size: 15px;
}

.align-right{
  flex-flow: row-reverse;
}