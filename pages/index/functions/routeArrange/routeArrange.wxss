/* pages/index/functions/routeArrange/routeArrange.wxss */
page{
  width: 100%;
  height: 100%;
}

.container{
  width: 100%;
  height: 100%;
  padding: 0;
}

#map{
  width: 100%;
  height: 100%;
}

.cover{
  width:100rpx;
  height:100rpx;
  position: absolute;
  left: 50rpx;
  bottom: 50rpx;
}

.cover_button{
  width:120rpx;
  height:60rpx;
  position: absolute;
  right: 50rpx;
  bottom: 50rpx;
  background-color: aliceblue;
  border-radius:20rpx ;
  border-style: solid;
  border-color: black;
  border-width: 1px;
  opacity: 0.6;

  font-size: 16px;
  line-height: 60rpx;
  text-align: center;
}
.cover image{
  width: 100%;
  height: 100%;
  opacity: 0.6;
}



.nav{
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #f5f5f5;
}
.nav text{
  padding: 20rpx;
  flex: 1;
  text-align: center;
  font-size: 16px;
}
.nav text.active{
  color: #000;
  border-bottom: 1rpx solid #000;
}.wrap{
  padding: 20rpx 30rpx;
  border-radius: 5px;
  font-size: 13px;
  background-color: #fff;
  position: relative;
}
.checkbox-con{
  margin-left: 50rpx auto;
  margin-right: 50rpx auto;
  text-align: center;
  position: relative;
}
.typeListBox{
  z-index: 101;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 10rpx;
  background: rgba(0,0,0,0.3);
}
.btn1{
  display: flex;
  flex-direction: row;
}
.btn1 button{
  flex: 1;
  background-color:transparent;
  color: #000;
  border: 1px solid #000; 
}


.item{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 250rpx;
  overflow: hidden;
}
.line{
  display: flex;
  flex-direction: column;
  width: 10%;
  height: 250rpx;
  overflow: hidden;
  font-size: 9px;
}
.line2{
  display: flex;
  flex-direction: column;
  width: 65%;
  height: 250rpx;
  overflow: hidden;
}
.fill{
  border-bottom-style: solid;
  border-bottom-color: rgb(207, 205, 205);
  border-bottom-width: 1px;
  height: 20px;
}
.imag{
  width: 80px;
  height: 80px;
  margin:5px
}

.stop_head{
  font-size:25px;
  margin:5px;
  flex-shrink: 0;
}

.shop_name{
  font-size:12px;
  margin-top:10px;
  white-space: wrap;
  text-overflow: ellipsis;
}