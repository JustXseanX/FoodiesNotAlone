/* pages/functions/functions.wxss */
page{
  height: 100%;
}

.container{
  width: 100%;
  height: 100%;
  padding: 0;
}

.func-table{
  background-color: white;
  height: 100%;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
}

.func {
  z-index: 1;
  height: 220rpx;
  width: 120rpx;
  margin: 33rpx;
  padding: 0;
  border: 10rpx block white;
  border-radius: 20rpx;
  /* background-color: #abc; */
}

.func image{
  height: 120rpx;
  width: 120rpx;
  margin: 0;
}

.func view{
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  margin-top: 10rpx;
  overflow: hidden;
  padding: 10rpx;
  font-size: 25rpx;
  line-height: 28rpx;
  color: #ffffff;
  height: 50rpx;
  width: 100rpx;
  background-color: #000000;
  opacity: 0.75;
}

.bg {
  position: absolute;
  height: 100%;
  width: 100%;
}